@model CourseViewModel

@{
    ViewData["Title"] = "AddCourse";
}

<h1>Add Course</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCourse">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <input asp-for="Name" class="form-control" placeholder="Course Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="MaxNumberOfStudents" class="form-control" placeholder="Maximum number of students" />
                <span asp-validation-for="MaxNumberOfStudents" class="text-danger"></span>
            </div>

          

            <select asp-for="MajorId" class="form-control mb-3" asp-items="ViewBag.Majors">
                <option>Please select a major</option>
            </select>

            <div class="form-group mb-3">
                <label class="mb-2">Select Prerequisite Courses:</label><br />
                @foreach (var course in ViewBag.Courses)
                {
                    <input type="checkbox" name="SelectedCoursesIds" value="@course.Id" /> @course.Name <br />
                }
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Add Course" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="mt-3">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
