@model CourseManagementSystem.ViewModels.LoginViewModel


@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 800px; /* Adjust as necessary */
            margin: 0 auto; /* Center the container horizontally */
            padding: 20px;
        }

        .login-form {
            flex: 1;
            margin-right: 20px; /* Add space between form and image */
        }

        .login-image {
            flex: 1;
            max-width: 100%; /* Ensure image doesn't exceed container */
        }
    </style>
</head>
<body>
    <div class="center-content">
        <div class="login-container">
            <div class="login-form">
                <h1>Login</h1>
                <form asp-action="Login" class="mt-4">

                    <div class="form-group">
                        <input asp-for="UserName" class="form-control form-control-lg" id="inputEmail" placeholder="Enter your email" style="border: none; border-bottom: 1px solid #ccc;" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control form-control-lg" id="inputPassword" placeholder="Enter your password" style="border: none; border-bottom: 1px solid #ccc;" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="RememberMe" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>


                    <button type="submit" class="btn btn-primary btn-block mt-3">Log in</button>

                </form>

                <a asp-action="ForgotPassword" class="mt-3">Forgot password?</a>

                <div class="text-center mt-3">
                    <p>If you don't have an account, contact IT Administration.</p>
                </div>
            </div>
            <div class="login-image">
                <img src="~/images/loginImg.jpg" alt="Login Image" class="img-fluid" />
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>
