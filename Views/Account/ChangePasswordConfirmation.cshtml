@{
    ViewData["Title"] = "Password Changed";
}

<div class="container text-center">
    <div class="alert alert-success mt-5" role="alert">
        <h1 class="display-4">Your password was changed successfully</h1>
        <p class="mt-3">Your password has been updated. You can now use your new password to log in.</p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Back to Home</a>
    </div>
</div>

<style>
    .alert {
        border-radius: 0.5rem;
        padding: 2rem;
    }

    .display-4 {
        font-size: 2.5rem;
    }

    .btn-primary {
        font-size: 1.1rem;
    }
</style>
