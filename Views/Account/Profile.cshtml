@model ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>@ViewData["Title"]</h2>
            <div class="d-flex align-items-start">
                @if (User.IsInRole("Student"))
                {
                    <img src="~/images/student.jpg" alt="Profile Image" class="rounded-circle mr-3" style="width: 150px; height: 150px;">
                }
                else
                {
                    <img src="~/images/instructor.jpg" alt="Profile Image" class="rounded-circle mr-3" style="width: 150px; height: 150px;">
                }
                <div>
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p><strong>Username:</strong> @Model.UserName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Address:</strong> @Model.Address</p>
                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                    @if (Model.CGPA.HasValue)
                    {
                        <p><strong>CGPA:</strong> @Model.CGPA</p>
                    }
                </div>
            </div>
            <div class="mt-4 text-center">
                <a asp-action="EditProfile" asp-controller="Account" class="btn btn-primary mr-2">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
                <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-warning">
                    <i class="fas fa-key"></i> Change Password
                </a>
            </div>
        </div>
    </div>
</div>
