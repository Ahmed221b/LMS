@model StudentsListViewModel

<h2>Students</h2>
@if (Model.Students != null && Model.Students.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Date of Birth</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>@student.FirstName</td>
                        <td>@student.LastName</td>
                        <td>@student.Address</td>
                        <td>@student.DataOfBirth.ToShortDateString()</td>
                        <td>@student.PhoneNumber</td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDropStudent-@student.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Drop from Course">
                                    <i class="fas fa-times-circle"></i> Drop from Course
                                </a>

                                <!-- Drop Student Modal -->
                                <div class="modal fade" id="confirmDropStudent-@student.Id" tabindex="-1" role="dialog" aria-labelledby="confirmDropStudentLabel-@student.Id" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="confirmDropStudentLabel-@student.Id">Confirm Drop</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to drop "@student.FirstName @student.LastName" from this course?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="DropStudentFromCourse" asp-route-courseId="@Model.CourseId" asp-route-studentId="@student.Id" method="post">
                                                    <button type="submit" class="btn btn-danger">Drop</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        }
                        else if (User.IsInRole("Instructor"))
                        {
                            <td>
                                <a asp-action="AddGrade" asp-route-studentId="@student.Id" asp-route-courseId="@Model.CourseId" asp-controller="Course" class="btn btn-primary">Grade</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        No students found for this course.
    </div>
}
@section Scripts {
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
