@model CourseManagementSystem.ViewModels.MajorViewModel

@{
    ViewData["Title"] = "Manage Majors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <h2>Add Major</h2>
        <form asp-action="AddMajor" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="Major Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Add Major" class="btn btn-primary" />
            </div>
        </form>
        <div class="mt-2">
            <a asp-action="Index" asp-controller="Admin">Back to Dashboard</a>
        </div>
    </div>
    <div class="col-md-8">
        <h2>List of Majors</h2>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Major Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var major in ViewBag.Majors)
                {
                    <tr>
                        <td><a asp-action="Details" asp-route-id="@major.Id">@major.Name</a></td>
                        <td>
                            <a asp-action="EditMajor" asp-route-id="@major.Id" class="btn btn-primary btn">Edit</a>
                            <button type="button" class="btn btn-danger btn" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@major.Id" data-name="@major.Name">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Major</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the major <strong id="modalMajorName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post">
                    <input type="hidden" name="id" id="modalMajorId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var majorId = button.getAttribute('data-id');
            var majorName = button.getAttribute('data-name');
            var modalMajorName = deleteModal.querySelector('#modalMajorName');
            var modalMajorId = deleteModal.querySelector('#modalMajorId');
            var deleteForm = deleteModal.querySelector('#deleteForm');
            modalMajorName.textContent = majorName;
            modalMajorId.value = majorId;
            deleteForm.action = '/Major/DeleteMajor/' + majorId;
        });
    </script>
}
