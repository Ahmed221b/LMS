@model MarkAssignmemtViewModel

@{
    ViewData["Title"] = "Mark Assignment";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header text-white bg-primary">
            <h2>@Model.StudentName's Submission for @Model.CourseName Assignment</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="MarkAssignment">

                        <div class="form-group">
                            <label asp-for="FileName" class="control-label font-weight-bold">Solution file</label>
                            <p>
                                <a asp-action="OpenSubmissionFile" asp-route-AssignmentId="@Model.AssignmentId" asp-route-StudentId="@Model.StudentId" asp-route-CourseId="@Model.CourseId">
                                    @Model.FileName
                                </a>
                            </p>
                            <span asp-validation-for="FileName" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label asp-for="Mark" class="control-label font-weight-bold"></label>
                            <input asp-for="Mark" class="form-control" placeholder="Enter mark" />
                            <span asp-validation-for="Mark" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label asp-for="Notes" class="control-label font-weight-bold"></label>
                            <textarea asp-for="Notes" class="form-control" rows="5" placeholder="Enter notes"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <input hidden asp-for="AssignmentId" class="form-control" />
                        <input hidden asp-for="StudentId" class="form-control" />
                        <input hidden asp-for="CourseId" class="form-control" />
                        <input hidden asp-for="CourseName" class="form-control" />
                        <input hidden asp-for="StudentName" class="form-control" />
                        <input hidden asp-for="FileName" class="form-control" />


                        <div class="form-group text-right mt-2">
                            <input type="submit" value="Mark" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
